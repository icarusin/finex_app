<% @bids.each do |bid| %>
<% if bid.status == 200 %>
<div class="clear"></div>
<div>
	<div class="span1">
		<%= bid.price %>
	</div>
	<div class="span1">
		<%= bid.quantity %>
	</div>
	<div class="span3">
		<%= time_ago_in_words(bid.created_at)%> ago.
	</div>
</div>
<% end %>

<% if bid.status == 210 %>
<div class="clear"></div>
<div style="background-color: #FF7171; color: #FFF; overflow: hidden;">
	<div class="span1">
		<%= bid.price %>
	</div>
	<div class="span1">
		-
	</div>
	<div class="span3">
		<%= time_ago_in_words(bid.created_at)%> ago.
	</div>
</div>
<% end %>

<% end %>